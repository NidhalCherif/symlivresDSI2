{% extends 'base.html.twig' %}

{% block title %}Hello LivresController!
{% endblock %}

{% block body %}
	<h1>Nos Livres Phares</h1>
	<div class="row">
        {% for livre in livres %}
        <div class="col-3 mt-3">
            <div class="card border-1">
                <img src="{{livre.image}}" class='img-fluid'alt="photo">
                <div class="card-body">
                    <h4 class="card-title">{{livre.libelle}}  ({{livre.prix}}DT)</h4>
                    <H6>{{livre.categorie.libelle}}</H6>
                    <p class="card-text">
                        Editeur:{{ livre.editeur }}<br>
                        Date Edition:{{ livre.dateEdition|date('m-d-Y') }}
                        <a href="#" class="btn btn-primary btn-sm">Ajouter au panier</a>
                        <a href="#" class="btn btn-success btn-sm">Voir d√©atil...</a>
                    </p>
                </div>
            </div>
            
                    
        </div>
        {% endfor %}
	</div>

{% endblock %}
